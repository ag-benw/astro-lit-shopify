---
import Layout from "../../layouts/Home.astro";
import NotFoundLayout from "../../layouts/NotFoundLayout.astro";
import { AddToCart } from "../../components/functional/AddToCart";
import { getProductByHandle } from "../../utils/shopify";

const { handle } = Astro.params;
const product = await getProductByHandle({ handle: handle || "" });

if (!product) {
  Astro.response.status = 404;
}

const firstVariant = product?.variants.nodes[0];
