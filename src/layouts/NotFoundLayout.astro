---
import Home from "./Home.astro";

export interface Props {
  title?: string;
  message?: string;
}

Astro.response.status = 404;

const defaultTitle = "Page not found";

const { title = defaultTitle, message = defaultTitle } = Astro.props as Props;
---

<Home title={title}>
  <div class="container grid justify-center py-44 text-center">
    <span class="text-6xl font-bold text-indigo-600">404</span>
    <h1 class="mt-4 text-xl">{message}</h1>
    <a
      href="/"
      class="mt-6 font-semibold text-indigo-600 hover:text-indigo-500"
    >
      Go back home
      <span aria-hidden="true"> &rarr;</span>
    </a>
  </div>
</Home>
